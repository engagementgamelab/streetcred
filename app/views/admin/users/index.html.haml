%h1 Users

%table.table
  %tr
    %th User Email
    %th Actions
    %th Awards
    %th
    %th
    %th
  - @users.each do |user|
    %tr
      %td= user.email
      %td= user.actions.count
      %td= user.awards.count
      %td{width: 45}= link_to 'Show', admin_user_path(user), :class => 'btn btn-mini'
      %td{width: 35}= link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-mini'
      %td{width: 55}= link_to 'Destroy', admin_user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-mini btn-danger'

%br

= link_to 'New User', new_admin_user_path, :class => 'btn btn-success'
