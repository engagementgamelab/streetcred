- if @action_type.errors.any?
  .alert.alert-error
    %h3= "#{pluralize(@action_type.errors.count, "error")} prohibited this action type from being saved:"
    %ul
      - @action_type.errors.full_messages.each do |msg|
        %li= msg


.field
  = f.label :channel_id
  = f.select(:channel_id, Channel.asc(:name).collect {|x| [x.name, x.id]})

.field
  = f.label :name
  = f.text_field :name

.field
  = f.label :description
  = f.text_area :description, rows: 5
  
.field
  = f.label :provider_uid, "Provider UID (venue id, event id, etc.)"
  = f.text_field :provider_uid

.actions
  = f.submit 'Save', :class => 'btn btn-success'
    
  = link_to 'Cancel', admin_action_types_path, :class => 'btn'
