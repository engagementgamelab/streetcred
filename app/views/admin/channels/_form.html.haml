- if @channel.errors.any?
  .alert.alert-error
    %h3= "#{pluralize(@channel.errors.count, "error")} prohibited this channel from being saved:"
    %ul
      - @channel.errors.full_messages.each do |msg|
        %li= msg

.field
  = f.label :name
  = f.text_field :name

.field
  = f.label :icon
  - if @channel.icon.present?
    = image_tag @channel.icon.url(:medium)
  = f.file_field :icon
%br/

- if @channel.api_key.present?
  .field
    = f.label :key
    = @channel.api_key
  .field
    %br/
    = check_box_tag :rekey
    Regenerate key
  
.actions
  = f.submit 'Save', :class => 'btn btn-success'
  = link_to 'Cancel', admin_channels_path, :class => 'btn'
