- if @admin_user.errors.any?
  .alert.alert-error
    %h3= "#{pluralize(@admin_user.errors.count, "error")} prohibited this user from being saved:"
    %ul
      - @admin_user.errors.full_messages.each do |msg|
        %li= msg

.field
  = f.label :name
  = f.text_field :name

.field
  = f.label :email
  = f.text_field :email

.field
  = f.label :password, "Password (leave blank if you don't want to change)"
  = f.password_field :password

.field
  = f.label :password_confirmation
  = f.password_field :password_confirmation

.actions
  = f.submit 'Save', :class => 'btn btn-success'
  = link_to 'Cancel', admin_admin_users_path, :class => 'btn'
