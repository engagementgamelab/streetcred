- if @campaign.errors.any?
  .alert.alert-error
    %h3= "#{pluralize(@campaign.errors.count, "error")} prohibited this campaign from being saved:"
    %ul
      - @campaign.errors.full_messages.each do |msg|
        %li= msg

.field
  = f.label :name
  = f.text_field :name

.field
  = f.label :description
  = f.text_area :description, :rows => 10
  
.fields_group
  .field
    = f.label :start_date
    = f.text_field :start_time, :placeholder => '2013-02-01'

  .field
    = f.label :end_date
    = f.text_field :end_time, :placeholder => '2013-03-31'

%br/
.actions
  = f.submit 'Save', :class => 'btn btn-success'
  = link_to 'Cancel', admin_campaigns_path, :class => 'btn'
