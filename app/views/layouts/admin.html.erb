<!DOCTYPE html>
<html>
<head>
  <title>StreetCred :: Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">
  
  <link href="/assets/application.css" media="all" rel="stylesheet" type="text/css" />
  <script src="/assets/application.js" type="text/javascript"></script>
  <%= csrf_meta_tags %>
  <style>body { padding: 70px 0 50px 0; }</style>
</head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <ul class="nav pull-right">
            <% if current_admin_user %>
              <li><%= link_to 'Log Out', admin_sign_out_path %></li>
            <% else %>
              <li><%= link_to 'Log In', admin_sign_in_path %></li>            
            <% end %>
          </ul>
          <% if current_admin_user %>
            <ul class="nav pull-lef">
              <li><%= link_to 'Levels', admin_levels_path %></li>
              <li><%= link_to 'Campaigns', admin_campaigns_path %></li>
              <li><%= link_to 'Awards', admin_awards_path %></li>
              <li><%= link_to 'Channels', admin_channels_path %></li>
              <li><%= link_to 'Actions', admin_actions_path %></li>
              <li><%= link_to 'Action Types', admin_action_types_path %></li>
              <li><%= link_to 'Users', admin_users_path %></li>
              <li><%= link_to 'Admin Users', admin_admin_users_path %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container">
      <% if flash[:alert] %>
        <div class='alert alert-error'>
          <%= flash[:alert] %>
        </div>
      <% end %>
      <% if flash[:notice] %>
        <div class='alert alert-success'>
          <%= flash[:notice] %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
