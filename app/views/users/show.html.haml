%h2= @user.full_name

%hr/
%h3 Awards
%table.table
  %tr
    %th Name
    %th Description
    %th Badge
  - for campaign in @user.campaigns
    %tr
      %td= campaign.name
      %td= campaign.description
      %td 
        =image_tag campaign.individual_badge.url
        =link_to "Send to backpack", '#', :class => "openbadge-link"

%hr/
%h3 Actions
%table.table
  %tr
    %th Action Type
    %th Channel
    %th Created At
    %th
  - for action in @user.actions.desc(:created_at)
    %tr
      %td= action.action_type.try(:name)
      %td= action.channel.try(:name)
      %td= action.created_at
      
- if @user.provider_uid.blank?
  %br/
  = link_to "Enable Foursquare Checkins", user_omniauth_authorize_path('foursquare')

%script{:src => 'http://beta.openbadges.org/issuer.js'}
:javascript
  $(document).ready(function() {
    $('.openbadge-link').on('click', function(e) {
      OpenBadges.issue('http://streetcred.dev/api/users/51ef490ee9aba4f8a0000003/campaigns/51ef440ce9aba4015d000005/badge.json');
    });
  });
